<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <!-- Remove projects we need to remove. -->
    <remove-project name="android" />
    <remove-project name="android_droid-ng_ci" />
    <remove-project name="android_build" />
    <remove-project name="android_vendor_droid-ng" />
    <remove-project name="android_packages_apps_Settings" />
    <remove-project name="android_packages_apps_Backgrounds" />

    <!-- Then define Kasumi remote. -->
    <remote name="kasumi"
            fetch="https://git.polycule.co/ProjectKasumi/android"
            revision="staging/kasumi-v2" />

    <!-- Now to the projects we need. -->
    <project path="android" name="manifest" remote="kasumi" upstream="https://github.com/droid-ng/android|ng-v2" />
    <project path="build/make" name="build_make" groups="pdk" remote="kasumi" upstream="https://github.com/droid-ng/android_build|ng-v2" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>
    <project path="external/tuuru" name="external_tuuru" remote="kasumi" revision="master" />
    <project path="vendor/kasumi" name="vendor_kasumi" remote="kasumi" upstream="https://github.com/droid-ng/android_vendor_ng|ng-v2" />
    <project path="packages/apps/Settings" name="packages_apps_Settings" groups="pdk-fs" remote="kasumi" upstream="https://github.com/droid-ng/android_packages_apps_Settings|ng-v2" />
    <project path="packages/apps/Backgrounds" name="packages_apps_Backgrounds" remote="kasumi" upstream="https://github.com/droid-ng/android_packages_apps_Backgrounds|vdk-devel" />
    <project path="vendor/lawnchair" name="vendor_lawnchair" remote="kasumi" />
    <project path="vendor/prebuilts" name="vendor_prebuilts" remote="kasumi" />

</manifest>
